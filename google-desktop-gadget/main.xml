<view height="60" resizable="true" width="200" onopen="view_onOpen();"
  onoptionchanged="onOptionChanged();">
    <img height="35" name="backgroundImg" width="100%" y="1" src="stock_images\background.png"
     />
    <img height="23" name="img1" width="26" x="100" y="6" src="images\hudson.png"
     />
    <label enabled="true" height="15" hitTest="htclient" name="jobLabel"
      width="53" x="14" y="19" onclick="jobLabel_onclick()"
      bold="true">&TABLE_HEAD_JOB;
    </label>
    <label height="15" name="statusLabel" width="50" x="125" y="20" bold="true"
     >&TABLE_HEAD_STATUS;
    </label>
    <div height="25" name="contentDiv" width="100%" x="8" y="36" autoscroll="true"
      background="#FFFFFF">
        <listbox height="100%" name="jobList" width="87%" x="0" y="0" background="#FFFFFF"
          itemHeight="20" itemOverColor="#FFFFFF" itemSelectedColor="#FFFFFF">
            <item height="20" name="item0">
                <a onclick="plugin.ShowOptionsDialog()">Configure your Hudson URL
                </a>
            </item>
        </listbox>
    </div>
    <label height="15" name="updateLabel" tooltip="&UPDATED_TOOLTIP;" width="137"
      x="15" y="6">&UPDATED_TOOLTIP;
    </label>
    <edit height="16" name="lastPollTime" width="40" x="125" y="6" readonly="true"
      value="13:15"/>
    <div height="50" name="errorDiv" width="100%" visible="false" x="5"
      y="50" background="#FF2222">
        <label height="40" name="labelNetworkFailure" width="185" x="5" y="5"
          wordwrap="true">&NETWORK_FAILURE;
        </label>
    </div>
    <script src="main.js" />
</view>
