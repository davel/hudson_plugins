<view height="285" width="430" oncancel="onCancel();" onok="onOk();"
  onopen="onOpen();">
    <label height="15" width="100%" x="25" y="61" bold="true" wordwrap="true"
     >&TIMEOUT_LABEL;
    </label>
    <edit height="16" name="urlPath" width="246" x="33" y="225"/>
    <button height="22" name="updateUrlButton" width="96" x="296" y="225"
      onclick="updateUrlButton_onclick()" color="#222222" downImage="stock_images\button_down.png"
      image="stock_images\button_up.png" overImage="stock_images\button_over.png"
      caption="Add URL"/>
    <label enabled="true" height="30" hitTest="htclient" width="76%" x="29"
      y="193" onclick="label_onclick()" bold="true" trimming="word"
      wordwrap="true">&URL_LABEL;
    </label>
    <label height="30" width="430" x="0" y="31" align="center" trimming="word"
     >&OPTIONS_HEADER;
    </label>
    <combobox height="250" name="intervalMinutes" width="50" x="35" y="77"
      background="#FFFFFF" itemSeparator="true" selectedIndex="0"
      itemWidth="50" itemHeight="16" onchange="intervalMinutes_onchange();"
      type="droplist" value="1">
        <item height="16" width="50" selected="true">
            <label valign="middle">1
            </label>
        </item>
        <item height="16" width="50">
            <label valign="middle">2
            </label>
        </item>
        <item height="16" width="50">
            <label valign="middle">5
            </label>
        </item>
        <item height="16" width="50">
            <label valign="middle">10
            </label>
        </item>
    </combobox>
    <listbox height="82" name="urlList" width="359" x="35" y="102" background="#FFFFFF"
      itemWidth="350" itemHeight="20" itemOverColor="#DBEEFE"
      onchange="urlList_onchange()" autoscroll="true" itemSelectedColor="#CBDEEE">
        <item height="20" name="Add new" width="350">
            <label font="" size="10" valign="middle">&ADD_URL;
            </label>
        </item>
    </listbox>
    <script src="options.js" />
</view>
